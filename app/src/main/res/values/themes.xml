<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundEditText">@color/purple_200</item>
        <item name="colorBackgroundTintButtonEquals">#AE0E0E</item>
        <item name="colorBackgroundTintButtonONc">#FF46AF18</item>
        <item name="colorBackgroundTintButtonOperation">@color/purple_200</item>
        <item name="colorBackgroundTintButtonNumber">#021387</item>
        <item name="colorBackgroundTintButtonDot">#501026</item>
        <item name="colorIconTintDark">#FFFFFF</item>
        <item name="colorIconTintLight">#FFFFFF</item>
        <item name="colorBackgroundTintButtonDark">#0529A8</item>
        <item name="colorBackgroundTintButtonLight">#0529A8</item>
    </style>
    <style name="ButtonOperationCalculator">
        <item name="android:backgroundTint">@color/purple_200</item>
    </style>
    <style name="ButtonEqualsCalculator">
        <item name="android:icon">@drawable/ic_equals</item>
     </style>
    <style name="ButtonONCCalculator">
        <item name="android:backgroundTint">#FF46AF18</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme">
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">italic</item>
        <item name="colorText" >@color/black</item>
        <item name="colorBackground">#352802</item>
        <item name="colorTextResult">#FF352802</item>
        <item name="colorBackgroundEditText">#5570B6</item>
        <item name="colorBackgroundTintButtonNumber">#337136</item>
        <item name="colorBackgroundTintButtonOperation">#CF2D21</item>
        <item name="colorBackgroundTintButtonONc">#3C0845</item>
        <item name="colorBackgroundTintButtonEquals">#1FCDBD</item>
        <item name="colorTextButton">#FF1FCDBD</item>
        <item name="colorIconTintDark">#FFFFFF</item>
        <item name="colorIconTintLight">#F9DA22</item>
        <item name="colorBackgroundTintButtonDark">#0529A8</item>
        <item name="colorBackgroundTintButtonLight">#D760EC</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="android:textColor">#8C9E9C</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="colorText" >#012433</item>
        <item name="colorBackground">#B7B8A9</item>
        <item name="colorTextResult">#032E2A</item>
        <item name="colorBackgroundEditText">#98E8F3</item>
        <item name="colorBackgroundTintButtonNumber">#53205C</item>
        <item name="colorBackgroundTintButtonOperation">#9F6209</item>
        <item name="colorBackgroundTintButtonONc">#14D8F1</item>
        <item name="colorBackgroundTintButtonEquals">#CC9E5C</item>
        <item name="colorTextButton">#D16F91</item>
        <item name="colorIconTintDark">#224DF9</item>
        <item name="colorIconTintLight">#FFFFFF</item>
        <item name="colorBackgroundTintButtonDark">#DBDCD8</item>
        <item name="colorBackgroundTintButtonLight">#0529A8</item>
    </style>


</resources>